{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "crs_resolver": "http://localhost:8080/rasdaman/def/",
    "default_crs": "http://localhost:8080/rasdaman/def/crs/EPSG/0/3572",
    "mock": false,
    "automated": true
  },
  "input": {
    "coverage_id": "hsia_arctic_production",
    "paths": [
      "/opt/rasdaman/user_data/snapdata/rasdaman-ingest/hsiaa/rasdaman_hsia_arctic_production_tifs/*.tif"
    ]
  },
  "recipe": {
    "name": "time_series_irregular",
    "options": {
      "time_parameter": {
        "filename": {
          "regex": "seaice_conc_sic_mean_pct_monthly_panarctic_(.*)",
          "group": "1"
        },
        "datetime_format": "YYYY_MM"
      },
      "time_crs": "http://opengis.net/def/crs/OGC/0/AnsiDate",
      "wms_import": true
    }
  },
  "hooks": [
    {
      "description": "Create hsia style for WMS",
      "when": "after_import",
      "cmd": ". /etc/default/rasdaman; curl --user $RASCURL \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=hsia_arctic_production&STYLEID=hsia&ABSTRACT=Style%20for%20the%20historical%20sea%20ice%20atlas&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"intervals\\\", \\\"colorTable\\\": {  \\\"0\\\": [8, 29, 88, 255],
        \\\"10\\\": [37, 52, 148, 255],
        \\\"20\\\": [34, 94, 168, 255],
        \\\"30\\\": [29, 145, 192, 255],
        \\\"40\\\": [65, 182, 196, 255],
        \\\"50\\\": [127, 205, 187, 255],
        \\\"60\\\": [199, 233, 180 ,255],
        \\\"75\\\": [237, 248, 217, 255],
        \\\"90\\\": [255, 255, 217, 255],
        \\\"120\\\": [0, 0, 0, 128] } }\"",
      "abort_on_error": true
    }
  ]
}