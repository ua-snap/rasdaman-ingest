{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "crs_resolver": "http://localhost:8080/def/",
    "default_crs": "http://localhost:8080/def/crs/EPSG/0/3338",
    "default_null_values": ["-9999"],
    "mock": false,
    "automated": true
  },
  "hooks": [
    {
      "description": "Create Arctic-EDS Mean Annual Ground Temperature Style for WMS Layer",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=iem_gipl_magt_alt_4km&STYLEID=arctic_eds_MAGT&ABSTRACT=style%20for%20Arctic-EDS%20mean%20annual%20ground%20temperature&WCPSQUERYFRAGMENT=%24c.magt&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"ramp\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"-20\\\": [33, 102, 172, 255],
       \\\"-6.7\\\": [67, 147, 195, 255],
       \\\"-4.4\\\": [146, 197, 222, 255],
       \\\"-2.2\\\": [209, 229, 240, 255],
       \\\"-1.1\\\": [247, 247, 247, 255],
       \\\"-0\\\": [253, 219, 199, 255],
       \\\"1.1\\\": [244, 165, 130, 255],
       \\\"2.2\\\": [214, 96, 77, 255] } }\"",
      "abort_on_error": true
    },
    {
      "description": "Create NCR Mean Annual Ground Temperature Style for WMS Layer",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=iem_gipl_magt_alt_4km&STYLEID=climate_impact_reports&ABSTRACT=ColorMapStyle%20for%20Climate%20Impact%20Reports%20web%20app%20MAGT%20mini-maps&WCPSQUERYFRAGMENT=%24c.magt&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"intervals\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"-20\\\": [33, 102, 172, 255],
       \\\"-6\\\": [67, 147, 195, 255],
       \\\"-4\\\": [146, 197, 222, 255],
       \\\"-2\\\": [209, 229, 240, 255],
       \\\"-1\\\": [247, 247, 247, 255],
       \\\"-0\\\": [253, 219, 199, 255],
       \\\"1\\\": [244, 165, 130, 255],
       \\\"2\\\": [214, 96, 77, 255] } }\"",
      "abort_on_error": true
    }
  ],
  "input": {
    "coverage_id": "iem_gipl_magt_alt_4km",
    "paths": [
      "gipl_alt_magt_4km.nc"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "import_order": "ascending",
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"era\"@OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"scenario\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "'CMIP5 GIPL Model Output 4 km magt alt'",
	    "Encoding": {
              "magt": "Â°C",
              "alt": "m",
              "eras": {
                "1995": 0,
                "2025": 1,
                "2050": 2,
                "2075": 3,
                "2095": 4
              },
              "models": {
                "cruts31": 0,
                "gfdlcm3": 1,
                "gisse2r": 2,
                "ipslcm5alr": 3,
                "mricgcm3": 4,
                "ncarccsm4": 5
              },
              "scenarios": {
                "historical": 0,
                "rcp45": 1,
                "rcp85": 2
              }
            }
          }
        },
        "slicer": {
          "type": "netcdf",
          "pixelIsPoint": true,
          "bands": [
            {
              "name": "magt",
              "identifier": "magt",
              "nilValue": "-9999.0"
            },
            {
              "name": "alt",
              "identifier": "alt",
              "nilValue": "-9999.0"
            }
          ],
          "axes": {
            "era": {
              "min": "${netcdf:variable:era:min}",
              "max": "${netcdf:variable:era:max}",
              "directPositions": "${netcdf:variable:era}",
              "crsOrder": 0,
              "gridOrder": 0,
              "irregular": true
            },
            "model": {
              "min": "${netcdf:variable:model:min}",
              "max": "${netcdf:variable:model:max}",
              "directPositions": "${netcdf:variable:model}",
              "crsOrder": 1,
              "gridOrder": 1,
              "irregular": true
            },
            "scenario": {
              "min": "${netcdf:variable:scenario:min}",
              "max": "${netcdf:variable:scenario:max}",
              "directPositions": "${netcdf:variable:scenario}",
              "crsOrder": 2,
              "gridOrder": 2,
              "irregular": true
            },
            "X": {
              "min": "${netcdf:variable:x:min}",
              "max": "${netcdf:variable:x:max}",
              "resolution": "${netcdf:variable:x:resolution}",
              "gridOrder": 4
            },
            "Y": {
              "min": "${netcdf:variable:y:min}",
              "max": "${netcdf:variable:y:max}",
              "resolution": "${netcdf:variable:y:resolution}",
              "gridOrder": 3
            }
          }
        }
      }
    }
  }
}
