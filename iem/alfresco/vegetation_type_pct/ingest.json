{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "alfresco_vegetation_type_percentage",
    "paths": [
      "veg_type_pct_geotiffs/*.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"era\"@OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/Index1D?axis-label=\"veg_type\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "",
            "Encoding": {
              "era": {
                "0": "1950-2008",
                "1": "2010-2039",
                "2": "2040-2069",
                "3": "2070-2099"
              },
              "model": {
                "0": "CRU-TS",
                "1": "NCAR-CCSM4",
                "2": "GFDL-CM3",
                "3": "GISS-E2-R",
                "4": "IPSL-CM5A-LR",
                "5": "MRI-CGCM3"
              },
              "scenario": {
                "0": "historical",
                "1": "rcp45",
                "2": "rcp60",
                "3": "rcp85"
              },
              "veg_type" : {
                "0": "Not Modeled",
                "1": "Black Spruce",
                "2": "White Spruce",
                "3": "Deciduous Forest",
                "4": "Shrub Tundra",
                "5": "Graminoid Tundra",
                "6": "Wetland Tundra",
                "7": "Barren/Lichen/Moss",
                "8": "Temperate Rainforest"
              }
            }
          }
        },
        "slicer": {
          "type": "gdal",
          "axes": {
            "era": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH')); regex_str = '([0-9]{4}-[0-9]{4})_(MRI-CGCM3|CRU-TS|NCAR-CCSM4|GISS-E2-R|IPSL-CM5A-LR|GFDL-CM3)_(.*?)_(.*?).tif'",
              "min": "luts.eras[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
              "dataBound": false
            },
            "model": {
              "min": "luts.models[regex_extract('${file:name}', regex_str, 2)]",
              "irregular": true,
              "dataBound": false
            },
            "scenario": {
              "min": "luts.scenarios[regex_extract('${file:name}', regex_str, 3)]",
              "irregular": true,
              "dataBound": false
            },
            "veg_type": {
              "min": "regex_extract('${file:name}', regex_str, 4)",
              "irregular": true,
              "dataBound": false
            },
            "X": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            },
            "Y": {
              "min": "${gdal:minY}",
              "max": "${gdal:maxY}",
              "resolution": "${gdal:resolutionY}"
            }
          }
        }
      }
    }
  }
}
