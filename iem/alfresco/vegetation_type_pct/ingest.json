{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "alfresco_vegetation_type_percentage",
    "paths": [
      "veg_type_pct_geotiffs/*.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"era\"@OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/Index1D?axis-label=\"veg_type\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "",
            "Encoding": {
              "era": {
                "0": "1950-2008",
                "1": "2010-2039",
                "2": "2040-2069",
                "3": "2070-2099"
              },
              "model": {
                "0": "MODEL-SPINUP",
                "1": "GFDL-CM3",
                "2": "GISS-E2-R",
                "3": "IPSL-CM5A-LR",
                "4": "MRI-CGCM3",
                "5": "NCAR-CCSM4"
              },
              "scenario": {
                "0": "historical",
                "1": "rcp45",
                "2": "rcp60",
                "3": "rcp85"
              },
              "veg_type" : {
                "0": "not_modeled",
                "1": "black_spruce",
                "2": "white_spruce",
                "3": "deciduous_forest",
                "4": "shrub_tundra",
                "5": "graminoid_tundra",
                "6": "wetland_tundra",
                "7": "barren_lichen_moss",
                "8": "temperate_rainforest"
              }
            }
          }
        },
        "slicer": {
          "type": "gdal",
          "axes": {
            "era": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH')); regex_str = '([0-9]{4}-[0-9]{4})_(MRI-CGCM3|MODEL-SPINUP|NCAR-CCSM4|GISS-E2-R|IPSL-CM5A-LR|GFDL-CM3)_(.*?)_(.*?).tif'",
              "min": "luts.eras[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
              "dataBound": false
            },
            "model": {
              "min": "luts.models[regex_extract('${file:name}', regex_str, 2)]",
              "irregular": true,
              "dataBound": false
            },
            "scenario": {
              "min": "luts.scenarios[regex_extract('${file:name}', regex_str, 3)]",
              "irregular": true,
              "dataBound": false
            },
            "veg_type": {
              "min": "regex_extract('${file:name}', regex_str, 4)",
              "irregular": true,
              "dataBound": false
            },
            "X": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            },
            "Y": {
              "min": "${gdal:minY}",
              "max": "${gdal:maxY}",
              "resolution": "${gdal:resolutionY}"
            }
          }
        }
      }
    }
  }
}
