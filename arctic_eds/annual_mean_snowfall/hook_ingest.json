{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "blocking": true,
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "mean_annual_snowfall",
    "paths": [
      "geotiffs/*.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/Index1D?axis-label=\"decade\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "",
            "Encoding": {
              "model": {
                "0": "CRU-TS",
                "1": "GFDL-CM3",
                "2": "GISS-E2-R",
                "3": "IPSL-CM5A-LR",
                "4": "MRI-CGCM3",
                "5": "NCAR-CCSM4"
              },
              "scenario": {
                "0": "historical",
                "1": "rcp45",
                "2": "rcp60",
                "3": "rcp85"
              },
              "decade": {
                "0": "1910-1919",
                "1": "1920-1929",
                "2": "1930-1939",
                "3": "1940-1949",
                "4": "1950-1959",
                "5": "1960-1969",
                "6": "1970-1979",
                "7": "1980-1989",
                "8": "1990-1999",
                "9": "2000-2009",
                "10": "2010-2019",
                "11": "2020-2029",
                "12": "2030-2039",
                "13": "2040-2049",
                "14": "2050-2059",
                "15": "2060-2069",
                "16": "2070-2079",
                "17": "2080-2089",
                "18": "2090-2099"
              }
            }
          }
        },
        "slicer": {
          "type": "gdal",
          "axes": {
            "model": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH')); regex_str = 'swe_(MRI-CGCM3|CRU-TS|NCAR-CCSM4|GISS-E2-R|IPSL-CM5A-LR|GFDL-CM3)_(.*?)_([0-9]{4}-[0-9]{4}).tif'",
              "min": "luts.models[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
              "dataBound": false
            },
            "scenario": {
              "min": "luts.scenarios[regex_extract('${file:name}', regex_str, 2)]",
              "irregular": true,
              "dataBound": false
            },
            "decade": {
              "min": "luts.decades[regex_extract('${file:name}', regex_str , 3)]",
              "irregular": true,
              "dataBound": false
            },
            "X": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            },
            "Y": {
              "min": "${gdal:minY}",
              "max": "${gdal:maxY}",
              "resolution": "${gdal:resolutionY}"
            }
          }
        }
      }
    }
  }
}
