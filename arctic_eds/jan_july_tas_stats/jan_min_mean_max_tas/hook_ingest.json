{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "blocking": true,
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "hooks": [
    {
      "description": "Create January Historical Min Temp Style for WMS Layer",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=jan_min_max_mean_temp&STYLEID=temp_historical_january_min&ABSTRACT=Historical%20January%20minimum%20temperatures%2C%201980-2009%2C%20CRU%20TS&WCPSQUERYFRAGMENT=%28condense%20%2B%20over%20%24t%20year%2879%3A108%29%20using%20%24c%5Byear%28%24t%29%2C%20model%280%29%2C%20scenario%280%29%2C%20tempstat%282%29%5D%29%20%2F%2030&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"ramp\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"-30\\\": [33, 102, 172, 255],
       \\\"-15\\\": [103, 169, 207, 255],
       \\\"-5\\\": [209, 229, 240, 255],
       \\\"0\\\": [247, 247, 247, 255],
       \\\"5\\\": [253, 219, 199, 255],
       \\\"15\\\": [239, 138, 98, 255],
       \\\"30\\\": [178, 24, 43, 255] } }\"",
      "abort_on_error": true
    },
    {
      "description": "Create January Historical Max Temp Style for WMS Layer",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=jan_min_max_mean_temp&STYLEID=temp_historical_january_max&ABSTRACT=Historical%20January%20maximum%20temperatures%2C%201980-2009%2C%20CRU%20TS&WCPSQUERYFRAGMENT=%28condense%20%2B%20over%20%24t%20year%2879%3A108%29%20using%20%24c%5Byear%28%24t%29%2C%20model%280%29%2C%20scenario%280%29%2C%20tempstat%280%29%5D%29%20%2F%2030&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"ramp\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"-30\\\": [33, 102, 172, 255],
       \\\"-15\\\": [103, 169, 207, 255],
       \\\"-5\\\": [209, 229, 240, 255],
       \\\"0\\\": [247, 247, 247, 255],
       \\\"5\\\": [253, 219, 199, 255],
       \\\"15\\\": [239, 138, 98, 255],
       \\\"30\\\": [178, 24, 43, 255] } }\"",
      "abort_on_error": true
    },
    {
      "description": "Create January Midcentury Min Temp Style for WMS Layer",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=jan_min_max_mean_temp&STYLEID=temp_midcentury_january_min&ABSTRACT=Midcentury%20January%20minimum%20temperatures%2C%202040-2069%2C%20NCAR%20CCSM4%2C%20RCP%208.5&WCPSQUERYFRAGMENT=%28condense%20%2B%20over%20%24t%20year%28139%3A168%29%20using%20%24c%5Byear%28%24t%29%2C%20model%286%29%2C%20scenario%283%29%2C%20tempstat%282%29%5D%29%20%2F%2030&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"ramp\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"-30\\\": [33, 102, 172, 255],
       \\\"-15\\\": [103, 169, 207, 255],
       \\\"-5\\\": [209, 229, 240, 255],
       \\\"0\\\": [247, 247, 247, 255],
       \\\"5\\\": [253, 219, 199, 255],
       \\\"15\\\": [239, 138, 98, 255],
       \\\"30\\\": [178, 24, 43, 255] } }\"",
      "abort_on_error": true
    },
    {
      "description": "Create January Midcentury Max Temp Style for WMS Layer",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=jan_min_max_mean_temp&STYLEID=temp_midcentury_january_max&ABSTRACT=Midcentury%20January%20maximum%20temperatures%2C%202040-2069%2C%20NCAR%20CCSM4%2C%20RCP%208.5&WCPSQUERYFRAGMENT=%28condense%20%2B%20over%20%24t%20year%28139%3A168%29%20using%20%24c%5Byear%28%24t%29%2C%20model%286%29%2C%20scenario%283%29%2C%20tempstat%280%29%5D%29%20%2F%2030&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"ramp\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"-30\\\": [33, 102, 172, 255],
       \\\"-15\\\": [103, 169, 207, 255],
       \\\"-5\\\": [209, 229, 240, 255],
       \\\"0\\\": [247, 247, 247, 255],
       \\\"5\\\": [253, 219, 199, 255],
       \\\"15\\\": [239, 138, 98, 255],
       \\\"30\\\": [178, 24, 43, 255] } }\"",
      "abort_on_error": true
    }
  ],
  "input": {
    "coverage_id": "jan_min_max_mean_temp",
    "paths": [
      "geotiffs/*.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"tempstat\"@OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/AnsiDate?axis-label=\"year\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "",
            "Encoding": {
              "tempstat": {
                "0": "tasmax",
                "1": "tasmean",
                "2": "tasmin"
              },
              "model": {
                "0": "CRU-TS",
                "2": "GFDL-CM3",
                "3": "GISS-E2-R",
                "4": "IPSL-CM5A-LR",
                "1": "5modelAvg",
                "5": "MRI-CGCM3",
                "6": "NCAR-CCSM4"
              },
              "scenario": {
                "0": "historical",
                "1": "rcp45",
                "2": "rcp60",
                "3": "rcp85"
              }
            }
          }
        },
        "slicer": {
          "type": "gdal",
          "axes": {
            "tempstat": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH')); regex_str = '(.*?)_(MRI-CGCM3|CRU-TS|NCAR-CCSM4|5modelAvg|GISS-E2-R|IPSL-CM5A-LR|GFDL-CM3)_(.*?)_([0-9]{4}).tif'",
              "min": "luts.tempstats[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
              "dataBound": false
            },
            "model": {
              "min": "luts.models[regex_extract('${file:name}', regex_str, 2)]",
              "irregular": true,
              "dataBound": false
            },
            "scenario": {
              "min": "luts.scenarios[regex_extract('${file:name}', regex_str, 3)]",
              "irregular": true,
              "dataBound": false
            },
            "year": {
              "min": "datetime(regex_extract('${file:name}', regex_str ,4), 'YYYY')",
              "crsOrder": 0,
              "gridOrder": 0,
              "type": "ansidate",
              "irregular": true,
              "sliceGroupSize": 1,
              "dataBound": false
            },
            "X": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            },
            "Y": {
              "min": "${gdal:minY}",
              "max": "${gdal:maxY}",
              "resolution": "${gdal:resolutionY}"
            }
          }
        }
      }
    }
  }
}
