{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "crs_resolver": "http://localhost:8080/def/",
    "default_crs": "http://localhost:8080/def/crs/EPSG/0/4326",
    "default_null_values": [
      "-9999"
    ],
    "mock": false,
    "automated": true
  },
  "input": {
    "coverage_id": "cmip6_indicators",
    "paths": [
      "cmip6_indicators_updated.nc"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "import_order": "ascending",
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"year\"@EPSG/0/4326",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "'CMIP6 Indicators'"
          },
          "local": {
            "Encoding": {
              "model": {
                "0": "CESM2",
                "1": "CESM2-WACCM",
                "2": "CNRM-CM6-1-HR",
                "3": "EC-Earth3-Veg",
                "4": "GFDL-ESM4",
                "5": "HadGEM-GC31-LL",
                "6": "HadGEM-GC31-MM",
                "7": "KACE-1-0-G",
                "8": "MIROC6",
                "9": "MPI-ESM1-2-LR",
                "10": "NorESM2-MM",
                "11": "TaiESM1"
              },
              "scenario": {
                "0": "historical",
                "1": "ssp126",
                "2": "ssp245",
                "3": "ssp370",
                "4": "ssp585"
              },
              "indicator": {
                "0": "dw",
                "1": "ftc",
                "2": "rx1day",
                "3": "su"
              }
            }
          }
        },
        "slicer": {
          "type": "netcdf",
          "pixelIsPoint": true,
          "bands": [
            {
              "name": "dw",
              "identifier": "dw",
              "nilValue": "-9999.0"
            },
            {
              "name": "ftc",
              "identifier": "ftc",
              "nilValue": "-9999.0"
            },
            {
              "name": "rx1day",
              "identifier": "rx1day",
              "nilValue": "-9999.0"
            },
            {
              "name": "su",
              "identifier": "su",
              "nilValue": "-9999.0"
            }
          ],
          "axes": {
            "scenario": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH'));",
              "min": "luts.scenarios['historical']",
              "max": "luts.scenarios['ssp585']",
              "directPositions": "list(luts.scenarios.values())",
              "irregular": true,
              "gridOrder": 0
            },
            "model": {
              "min": "luts.models['CESM2']",
              "max": "luts.models['TaiESM1']",
              "directPositions": "list(luts.models.values())",
              "irregular": true,
              "gridOrder": 1
            },
            "year": {
              "min": "${netcdf:variable:year:min}",
              "max": "${netcdf:variable:year:max}",
              "directPositions": "${netcdf:variable:year}",
              "irregular": true,
              "gridOrder": 2
            },
            "lat": {
              "min": "${netcdf:variable:lat:min}",
              "max": "${netcdf:variable:lat:max}",
              "resolution": "${netcdf:variable:lat:resolution}",
              "gridOrder": 3
            },
            "lon": {
              "min": "${netcdf:variable:lon:min}",
              "max": "${netcdf:variable:lon:max}",
              "resolution": "${netcdf:variable:lon:resolution}",
              "gridOrder": 4
            }
          }
        }
      }
    }
  }
}