{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "crs_resolver": "http://localhost:8080/def/",
    "default_crs": "http://localhost:8080/def/crs/EPSG/0/4326",
    "mock": false,
    "automated": true
  },
  "hooks": [
    {
      "description": "Create default style for monthly precipitation",
      "when": "after_import",
      "cmd": "curl \"http://localhost:8080/rasdaman/admin/layer/style/add?COVERAGEID=cmip6_monthly_precipitation&STYLEID=default_precip&ABSTRACT=CMIP6%20average%20monthly%20precipitation&WCPSQUERYFRAGMENT=%24c.pr&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\": \\\"ramp\\\", \\\"colorTable\\\": {  \\\"-9999\\\": [0, 0, 0, 0],
       \\\"0\\\": [140, 81, 10, 255],
       \\\"25\\\": [216, 179, 101, 255],
       \\\"51\\\": [246, 232, 195, 255],
       \\\"127\\\": [245, 245, 245, 255],
       \\\"254\\\": [199, 234, 229, 255],
       \\\"508\\\": [90, 180, 172, 255],
       \\\"1016\\\": [1, 102, 94, 255] } }\"",
      "abort_on_error": true
    }
  ],
  "input": {
    "coverage_id": "cmip6_monthly_precipitation",
    "paths": [
      "pr_data/pr_Amon*.nc"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "import_order": "ascending",
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"model\"@OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/AnsiDate@EPSG/0/4326",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "'CMIP6 monthly precipitation on common grid'",
            "Encoding": {
              "model": {
                "0": "CESM2",
                "1": "CNRM-CM6-1-HR",
                "2": "EC-Earth3-Veg",
                "3": "GFDL-ESM4",
                "4": "HadGEM3-GC31-LL",
                "5": "HadGEM3-GC31-MM",
                "6": "KACE-1-0-G",
                "7": "MIROC6",
                "8": "MPI-ESM1-2-HR",
                "9": "MRI-ESM2-0",
                "10": "NorESM2-MM",
                "11": "TaiESM1"
              },
              "scenario": {
                "0": "historical",
                "1": "ssp126",
                "2": "ssp245",
                "3": "ssp370",
                "4": "ssp585"
              }
            }
          }
        },
        "slicer": {
          "type": "netcdf",
          "pixelIsPoint": true,
          "bands": [
            {
              "name": "pr",
              "identifier": "pr"
            }
          ],
          "axes": {
            "model": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH')); regex_str = 'pr_Amon_(.*)_(.*).nc'",
              "min": "luts.models[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
              "dataBound": false,
              "gridOrder": 0
            },
            "scenario": {
              "min": "luts.scenarios[regex_extract('${file:name}', regex_str, 2)]",
              "irregular": true,
              "dataBound": false,
              "gridOrder": 1
            },
            "ansi": {
              "statements": "from datetime import datetime; import netCDF4",
              "min": "netCDF4.num2date(${netcdf:variable:time:min}, 'days since 1950-01-01', calendar='noleap').strftime(\"%Y-%m-%dT%H:%M\")",
              "max": "netCDF4.num2date(${netcdf:variable:time:max}, 'days since 1950-01-01', calendar='noleap').strftime(\"%Y-%m-%dT%H:%M\")",
              "directPositions": "[netCDF4.num2date(x, 'days since 1950-01-01', calendar='noleap').strftime(\"%Y-%m-%dT%H:%M\") for x in ${netcdf:variable:time}]",
              "gridOrder": 2,
              "type": "ansidate",
              "irregular": true
            },
            "lon": {
              "min": "${netcdf:variable:lon:min}",
              "max": "${netcdf:variable:lon:max}",
              "resolution": "${netcdf:variable:lon:resolution}",
              "gridOrder": 3
            },
            "lat": {
              "min": "${netcdf:variable:lat:min}",
              "max": "${netcdf:variable:lat:max}",
              "resolution": "${netcdf:variable:lat:resolution}",
              "gridOrder": 4
            }
          }
        }
      }
    }
  }
}
