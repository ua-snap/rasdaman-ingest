{
  "config": {
    "service_url": "https://localhost/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "blocking": true,
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "cmip6_downscaled_tasmax_wms",
    "paths": [
      "wms_netcdf/tasmax_*.nc"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "import_order": "ascending",
      "tiling": "ALIGNED [0:*, 0:*, 0:*, 0:*] tile size 16777216",
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"scenario\"@OGC/0/Index1D?axis-label=\"year\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "'Downscaled CMIP6 tasmax WMS'"
          },
          "local": {
            "Encoding": "{
              'scenario': {
                '0': 'historical',
                '1': 'ssp585'
              },
              'year': {
                '0': '2000',
                '1': '2100'
              }
            }"
          }
        },
        "slicer": {
          "type": "netcdf",
          "pixelIsPoint": true,
          "bands": [
            {
              "name": "tasmax",
              "identifier": "tasmax",
              "nilValue": "-9999.0"
            }
          ],
          "axes": {
            "scenario": {
              "statements": "import imp, os; luts = imp.load_source('wms_luts', os.getenv('LUTS_PATH')); regex_str = 'tasmax_7ModelAvg_(.*)_(.*)-07.nc';",
	      "min": "luts.scenarios[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
	      "dataBound": false,
              "gridOrder": 0
            },
            "year": {
	      "min": "luts.years[regex_extract('${file:name}', regex_str, 2)]",
              "irregular": true,
	      "dataBound": false,
              "gridOrder": 1
            },
            "Y": {
              "min": "${netcdf:variable:y:min}",
              "max": "${netcdf:variable:y:max}",
              "resolution": "${netcdf:variable:y:resolution}",
              "gridOrder": 3
            },
	    "X": {
              "min": "${netcdf:variable:x:min}",
              "max": "${netcdf:variable:x:max}",
              "resolution": "${netcdf:variable:x:resolution}",
              "gridOrder": 2
            }
          }
        }
      }
    }
  },
  "hooks": [
    {
      "description": "Create Maximum Near-surface Air Temperature style for ARDAC",
      "when": "after_import",
      "cmd": ". /etc/default/rasdaman; curl --user $RASCURL \"https://datacubes.earthmaps.io/rasdaman/admin/layer/style/add?COVERAGEID=cmip6_downscaled_tasmax_wms&STYLEID=ardac_tasmax&ABSTRACT=Maximum%20Near-surface%20Air%20Temperature%20(ARDAC)&WCPSQUERYFRAGMENT=&COLORTABLETYPE=ColorMap&\" --data-urlencode \"COLORTABLEDEFINITION={\\\"type\\\":\\\"intervals\\\",\\\"colorTable\\\":{\\\"-50\\\":[100,104,172,255],\\\"-20\\\":[115,148,193,255],\\\"-15\\\":[148,188,213,255],\\\"-10\\\":[186,218,229,255],\\\"-5\\\":[224,236,241,255],\\\"0\\\":[244,224,169,255],\\\"5\\\":[244,188,136,255],\\\"10\\\":[239,144,115,255],\\\"15\\\":[220,105,97,255],\\\"20\\\":[186,80,94,255],\\\"9999\\\":[0,0,0,0]}}\"",
      "abort_on_error": true
    }
  ]
}
