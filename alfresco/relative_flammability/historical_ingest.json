{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "relative_flammability_historical",
    "paths": [
      "historical_relative_flammability/*.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "wms_import": true,
      "coverage": {
        "crs": "OGC/0/Index1D?axis-label=\"era\"@EPSG/0/3338",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "",
            "Encoding": {
              "era": {
                "0": "1950-1959",
                "1": "1950-2008",
                "2": "1960-1969",
                "3": "1970-1979",
                "4": "1980-1989",
                "5": "1990-1999",
                "6": "2000-2008"
              }
            }
          }
        },
        "slicer": {
          "type": "gdal",
          "axes": {
            "era": {
              "statements": "import imp, os; luts = imp.load_source('luts', os.getenv('LUTS_PATH')); regex_str = '([0-9]{4}-[0-9]{4})_historical_'",
              "min": "luts.historical_eras[regex_extract('${file:name}', regex_str, 1)]",
              "irregular": true,
              "dataBound": false
            },
            "X": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            },
            "Y": {
              "min": "${gdal:minY}",
              "max": "${gdal:maxY}",
              "resolution": "${gdal:resolutionY}"
            }
          }
        }
      }
    }
  }
}
